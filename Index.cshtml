    function getFPLX(sfpdm)
    {
        var a = sfpdm;
        var b;
        var c = "99";

        if (a.Length == 12)
        {
            b = a.Substring(7, 1);
            if (c == "99")
            {  //增加判断，判断是否为新版电子票
