                {  //判断是否为卷式发票  第1位为0且第11-12位为06或07
                    c = "11";
                }
            }
            if (c == "99")
            { //如果还是99，且第8位是2，则是机动车发票
                if (b == "2" && a.Substring(0, 1) != "0")
                {
                    c = "03";
                }
                else
                {
                    c = "10";
                }
            }
        }
        else if (a.Length == 10)
        {
            b = a.Substring(7, 1);
            if (b == "1" || b == "5")
            {
                c = "01";
            }
            else if (b == "6" || b == "3")
            {
                c = "04";
            }
            else if (b == "7" || b == "2")
            {
                c = "02";
            }
        }
        if (c == "99")
            c = "";
        return c;
